    <LinearLayout
        android:id="@+id/ll_btn_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_et_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:background="@drawable/bg_white_round"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="14dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_et_gp" />

            <TextView
                android:id="@+id/tv_et_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:text="改   名"
                android:textColor="@color/color_gray_919191"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_del_group"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="17dp"
            android:background="@drawable/bg_white_round"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="14dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_del_gp" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:text="解   散"
                android:textColor="@color/color_gray_919191"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_person"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:background="@drawable/bg_white_round"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:src="@drawable/ic_add_psn" />

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:text="加   人"
                android:textColor="@color/color_gray_919191"
                android:textSize="16sp" />
        </LinearLayout>
